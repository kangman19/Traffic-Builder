{
  "name": "traffic-monitor-app",
  "version": "1.0.0",
  "description": "Real-time traffic monitoring app that notifies when traffic builds up or clears",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "keywords": ["traffic", "monitoring", "google-maps", "notifications"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  }
}